<h1>Events</h1>

<div class="container">
<div class="container-index">
    <div class="sticky-note">
      <p>Do you like what you see?</p>
      <div class="booking">
        <p>Reserve a seat</p>
      </div>
      <p>Check other Travel podcast you can enjoy and chat!</p>
    </div>
      <div class="pocast-list">
        <div class="row col-xs-12">
          <% @events.each do |event| %>
           <div class="card-product">
              <%= link_to event.title, event_participations_path(event), method: :post %>
              <%= event.title %>
              <%= event.description %>
              <%= event.date %>
              <p>Participants:
                <% event.participations.each do |participation| %>
                  <%= participation.user.username %> </p>
                <% end %>
            </div>
        <% end %>
       </div>
    </div>
 </div>
</div>

