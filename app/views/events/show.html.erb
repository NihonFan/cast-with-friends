<div class="container-show">
  <div class="container">
    <audio id="audio" src="<%= @event.episode.LN_audio_URL %>" preload="auto" style="display: none;"></audio>
    <div id="audio-box">

      <div id="time-wrapper">
        <span id="play" class="fas fa-play"></span>
        <input id="progress" type="range" min="0" max="151" value="0">
        <span id="time-played"></span>
      </div>
    </div>
    <h2>The podcast you are to listening to ðŸŽ§</h2>
    <br>
    <h5>
      <strong>Event: <%= @event.title %></strong>
    </h5>
    <p><%= @event.description %></p>
    <br>
    <p>Podcast: <%= @event.episode.podcast.LN_title %></p>
    <p>Episode: <%= @event.episode.LN_title %></p>

    <div id="event" class="container-show" data-event-id="<%= @event.id %>">
      <a id="audio-file"> <%= @event.episode.LN_audio_URL %>  </a>
      <div class="row">
        <div class="col">
          <button id="audio-button" type="button" class="btn">Play Audio</button>
        </div>
        <div class="col">
          <button id="audio-pause" type="button" class="btn">Pause Audio</button>
        </div>
      </div>
    </div>
    <div class="link">
      <a id="audio-file" class="audioURL"><%= @event.episode.LN_audio_URL %></a>
    </div>
    <div style= "opacity: 0;" id="agora-temp-token"> <%= @temp_token %> </div>
  </div>
</div>
