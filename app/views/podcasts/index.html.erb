<div class="container index">
  <div class="col-12">
    <h1>Podcasts</h1>
    <div class="row col-12">
      <% @podcasts.each do |podcast| %>
      <div class="col-12 m-2">
        <%= link_to podcast_path(podcast), class: "nav-link btn" do %>
          <% @title = podcast.LN_title %>
          <% @description = podcast.LN_description %>
          <% @img = podcast.LN_image_URL %>
          <%= render 'shared/card' %>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
