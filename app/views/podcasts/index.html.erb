<h1>Podcasts#index</h1>
<p>Find me in app/views/podcasts/index.html.erb</p>

<div class="container index">
  <div class="col-xs-auto">
    <h1>Events</h1>
    <div class="row col-xs-12">
      <% @podcasts.each do |podcast| %>
      <div class="col col-xs-12 col-sm-12 col-md-6 col-lg-4">
        <!-- <button type="button" class="btn" data-toggle="modal" data-target=".bd-example-modal-lg">
          <%#= podcast.LN_title %>
          <%#= podcast.LN_description %>
          <%#= podcast.LN_image_URL %>
          <%#= podcast.LN_podcast_id %>
        </button> -->
        <%= link_to podcast_path(podcast), remote: true do %>
          <%= podcast.LN_title %>
          <%= podcast.LN_description %>
          <%= podcast.LN_image_URL %>
          <%= podcast.LN_podcast_id %>
        <% end %>
        <div id="show-episodes">

        </div>
        <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLongTitle"><%= podcast.LN_title %></h5>
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
                <div class="modal-body">
                 <iframe src="podcasts/<%= podcast.id %>" id="modalframe" style="height: 75vh; width: -webkit-fill-available; border:none;" title="List of episodes"></iframe>
                </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>

</div>


<%#= render 'shared/show' %>
