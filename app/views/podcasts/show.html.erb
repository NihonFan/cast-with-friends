<% if flash[:notice] -%>
  <div class = "alert alert-danger"><%= flash[:notice] %></div>
<% end %>

<div class="container index">
  <div class="col-12">
    <h1>Episodes</h1>
    <div class="row col-xs-12">
      <% @episodes.each do |episode| %>
      <div class="col-12 m-2">
        <%= link_to new_episode_event_path(episode), target: "_top", class: "nav-link btn" do %>
          <% @title = episode.LN_title %>
          <% @description = episode.LN_description %>
          <% @img = episode.podcast.LN_image_URL %>
          <%= render 'shared/card' %>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
