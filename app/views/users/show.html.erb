<div class="container-user">

    <%= render 'shared/background' %>
  <div class="container">
    <div class="user">
      <h3 class="greetings">Hello, <%= @user.username %></h3>
      <p style="letter-spacing: 2px;"><%= @user.email %></p>
    </div>

    <div class="float-wrap">
      <ul><%= button_to "New event", podcasts_search_path, method: :get, class: "btn" %></ul>
      <!-- <ul id="history"<%#= button_to "History", user_path(current_user, anchor: "history"), method: :get, class: "btn" %></ul> -->
    </div>
    <br>
   <!--  <h1>In less than 15 minutes</h1>
    <%# @user.events.each do |event| %>
      <%# if event.date < (DateTime.now + 900) %>
        <%#= event.title %>
      <%# end %>
    <%# end %> -->
    <%#= link_to "", event_path(event) %>
    <h1 class="dash">Upcoming created events</h1>
    <div class="flex-parent">
      <div class="mainti-flex-container">
        <%# @user.events.order(date: :desc) %>
        <% @user.events.each do |event| %>
          <div class="mainti">
            <%# d = event.date %>
            <%# d = d.strftime("%a, %b %e %Y at %R") %>
            <span data-info="<%= event.title %>"></span>
          </div>
        <% end %>
      </div>
      <div class="description-flex-container mt-3">
        <% @user.events.each do |event| %>
        <% d = event.date %>
        <% d = d.strftime("%a, %b %e %Y at %R") %>
          <p><a href="<%= event_path(event) %>"><%= event.description %> 🎧 <%= d %></a></p>
        <% end %>
      </div>
    </div>



    <h1 class="dash">Events where I am Participating</h1>
    <div class="card-product">
      <div class="card-product-infos">

        <div class="row col-xs-12">
          <% @user.participations.each do |participation|  %>
          <div class="col col-xs-12 col-sm-12 col-md-6 col-lg-6 mb-2">
            <%= link_to event_path(participation.event), method: :get, target: "_top", class: "nav-link btn" do %>
              <% @title = participation.event.title %>
              <% @description = participation.event.description %>
              <% @date = participation.event.date %>
              <% @img = participation.event.episode.podcast.LN_image_URL %>
              <%= render 'shared/eventcard' %>
            <% end %>
          </div>
          <% end %>
         </div>
        </div>
     </div>

      <%#= link_to "Create a new event!", podcasts_search_path, class: "nav-link btn" %>

    </div>
  </div>
</div>




