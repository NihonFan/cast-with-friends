<div class="home-picture" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://cdn5.vectorstock.com/i/1000x1000/43/69/cartoon-people-at-camping-leisure-with-yellow-tent-vector-26874369.jpg)">
  <div style="display: inline;">
    <h1 style="text-align:center;"><strong>Cast with Friends</strong></h1>
    <h3 style="text-align:center;"><strong>Gather around the digital campfire</strong></h3>
  </div>
</div>

<div class="container-user">
  <div class="container">
    <div class="user">
      <h3><strong>Hello, <%= @user.username %></strong>ðŸ˜€</h3>
      <p><%= @user.email %></p>
    </div>

    <div class="float-wrap">
      <ul class ="event"><p>Events+</p></ul>
      <ul class ="event"><p>History</p></ul>
    </div>

    <section class="saved">
      <h3>My Saved Events</h3>
      <div class="timeline">
        <% @user.events.each do |event| %>
        <%= button_to event.title, event_path(event), method: :get, class: "btn" %>
        <%= link_to event.episode.podcast.LN_image_URL %>
        <% end %>
      </div>
    </section>

<h3>Events where I am participating:</h3>
<div class="card-product">

  <div class="card-product-infos">
    <% @user.participations.each do |participation|  %>
      <ul>
        <img src=<%=participation.event.episode.podcast.LN_image_URL %>>
        <%= button_to participation.event.title, event_path(participation.event), method: :get, class: "btn" %>
      </ul>
    <% end %>
  </div>
</div>
    <%= link_to "Create a new event!", podcasts_search_path, class: "nav-link btn" %>
  </div>
</div>




